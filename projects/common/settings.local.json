{
  "permissions": {
    "allow": [
      "Bash(rm:*)",
      "Bash(grep:*)",
      "Bash(find:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "if [ -f \"$CLAUDE_PROJECT_DIR/build.py\" ]; then cd \"$CLAUDE_PROJECT_DIR\" && python build.py -fac 2>/dev/null || true; fi",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
