{
  "permissions": {
    "allow": [
      "Bash(rm:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(.claude/commands/snt-ccu2-yocto/scripts/yocto-build.sh:*)",
      "Bash(docker ps:*)",
      "Bash(docker exec:*)"
    ],
    "deny": []
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PROJECT_DIR}/.claude/hooks/detect-build-changes.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "if [ -f \"$CLAUDE_PROJECT_DIR/run-dev-container.sh\" ] && [ -f \"$CLAUDE_PROJECT_DIR/build.py\" ]; then cd \"$CLAUDE_PROJECT_DIR\" && ./run-dev-container.sh -x 'python build.py -fac' 2>/dev/null || true; elif [ -f \"$CLAUDE_PROJECT_DIR/build.py\" ]; then cd \"$CLAUDE_PROJECT_DIR\" && python build.py -fac 2>/dev/null || true; fi",
            "timeout": 180
          }
        ]
      },
      {
        "matcher": "Bash(./run-dev-container.sh*build.py*)",
        "hooks": [
          {
            "type": "command",
            "command": "cd \"$CLAUDE_PROJECT_DIR\" && ./run-dev-container.sh -x 'python build.py -fac' 2>/dev/null || true",
            "timeout": 180
          }
        ]
      }
    ]
  }
}
